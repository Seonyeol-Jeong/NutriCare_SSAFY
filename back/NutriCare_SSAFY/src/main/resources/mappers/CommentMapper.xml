<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nutricare.model.dao.CommentDao">

    <sql id="commentColumns">
        c.comment_id,
        c.board_id,
        c.user_id,
        c.user_name,
        c.content,
        c.created_at,
        c.updated_at,
        c.is_deleted
    </sql>

    <resultMap id="commentResultMap" type="Comment">
        <id property="commentId" column="comment_id"/>
        <result property="boardId" column="board_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="is_deleted"/>
    </resultMap>

    <select id="selectAll" parameterType="long" resultMap="commentResultMap">
        SELECT
        <include refid="commentColumns"/>
        FROM comment c
        WHERE c.board_id = #{boardId}
          AND c.is_deleted = FALSE
        ORDER BY c.created_at ASC
    </select>
    
    <select id="selectById" parameterType="long" resultMap="commentResultMap">
        SELECT
        <include refid="commentColumns"/>
        FROM comment c
        WHERE c.comment_id = #{commentId}
          AND c.is_deleted = FALSE
    </select>

    <insert id="insert" parameterType="Comment"
        useGeneratedKeys="true" keyProperty="commentId">
        INSERT INTO comment (board_id, user_id, user_name, content)
        VALUES (#{boardId}, #{userId}, #{userName}, #{content})
    </insert>

    <update id="update" parameterType="Comment">
        UPDATE comment
        SET content = #{content},
            updated_at = NOW()
        WHERE comment_id = #{commentId}
          AND is_deleted = FALSE
    </update>
    
    <update id="delete" parameterType="long">
        UPDATE comment
        SET is_deleted = TRUE,
            updated_at = NOW()
        WHERE comment_id = #{commentId}
    </update>

</mapper>